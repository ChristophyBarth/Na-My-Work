<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/splashScreenFragment">


    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.onboarding.onboardingScreens.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_firstFragment"
            app:destination="@id/firstFragment"
            app:popUpTo="@id/login_nav_graph"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_splashScreenFragment_to_homeActivity"
            app:destination="@id/homeActivity"
            app:popUpTo="@id/login_nav_graph"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_splashScreenFragment_to_onboardFragment"
            app:destination="@id/onboardFragment"
            app:popUpTo="@id/login_nav_graph"
            app:popUpToInclusive="false"/>

    </fragment>
    <fragment
        android:id="@+id/firstFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.onboarding.onboardingScreens.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_firstFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.onboarding.onboardingScreens.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_secondFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.onboarding.onboardingScreens.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third">
        <action
            android:id="@+id/action_thirdFragment_to_onboardFragment"
            app:destination="@id/onboardFragment"
            app:popUpTo="@id/login_nav_graph"
            app:popUpToInclusive="false"/>
    </fragment>
    <fragment
        android:id="@+id/onboardFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.onboarding.onboardingScreens.OnboardFragment"
        android:label="fragment_onboard"
        tools:layout="@layout/fragment_onboard">
        <action
            android:id="@+id/action_onboardFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_onboardFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.onboarding.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_profileSetupFragment"
            app:destination="@id/profileSetupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeActivity"
            app:destination="@id/homeActivity" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.onboarding.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.password.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_forgotPasswordOtpFragment"
            app:destination="@id/forgotPasswordOtpFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.password.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password">
        <action
            android:id="@+id/action_resetPasswordFragment_to_completeResetPasswordFragment"
            app:destination="@id/completeResetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/completeResetPasswordFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.password.CompleteResetPasswordFragment"
        android:label="fragment_complete_reset_password"
        tools:layout="@layout/fragment_complete_reset_password">
        <action
            android:id="@+id/action_completeResetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/login_nav_graph"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/profileSetupFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.profile.ProfileSetupFragment"
        android:label="fragment_profile_setup"
        tools:layout="@layout/fragment_profile_setup" />
    <activity
        android:id="@+id/homeActivity"
        android:name="kodecamp.android.na_my_work.ui.activities.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />
    <fragment
        android:id="@+id/forgotPasswordOtpFragment"
        android:name="kodecamp.android.na_my_work.ui.ui.password.ForgotPasswordOtpFragment"
        android:label="fragment_forgot_password_otp"
        tools:layout="@layout/fragment_forgot_password_otp" >
        <action
            android:id="@+id/action_forgotPasswordOtpFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
</navigation>